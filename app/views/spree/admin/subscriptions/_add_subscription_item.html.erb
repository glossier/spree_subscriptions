<div id="add-subscription-item" data-hook>
  <fieldset class="no-border-bottom">
    <legend align="center"><%= Spree.t(:add_product) %></legend>

    <div data-hook="add_product_name" class="field twelve columns alpha">
      <%= label_tag :add_subscription_item_variant_id, Spree.t(:name_or_sku) %>
      <%= hidden_field_tag :add_subscription_item_variant_id, "", :class => "variant_autocomplete fullwidth" %>
    </div>
    <input class="store_currency" type="hidden" value="<%= @subscription.last_order_currency %>">

  </fieldset>

  <div id="stock_details"></div>
</div>
